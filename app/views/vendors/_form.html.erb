
<%= form_for(@vendor, remote:true) do |f| %>
  <% if @vendor.errors.any? %>
    <%= render 'errors' %>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
    <span id="nameError"></span>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
    <span id="emailError"></span>
  </div>
  <div class="field">
    <%= f.label :mobile %><br>
    <%= f.text_field :mobile %>
    <span id="mobileError"></span>
  </div>
  <div class="actions" id="submit">
    <%= f.submit %>
  </div>
<% end %>
